<div class="container-fluid">
  <nav class="navbar navbar-expand-lg bg-light">
    <div class="container">
      <%= link_to root_path, class: 'navbar-brand' do %>
        <h3><i class="fa-solid fa-book"></i> Reading List</h3>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% links = [
            { name: 'Authors', path: authors_path },
            { name: 'Genres', path: genres_path },
            { name: 'Series', path: series_index_path },
            { name: 'Shopping List', path: buy_books_path },
            { name: 'Unrated books', path: unrated_books_path },
            { name: 'Reviews', path: reviews_books_path }
          ] %>

          <% links.each do |link| %>
            <% next if link[:name] == 'Unrated books' && Book.unrated.none? %>
            <div class="nav-item">
              <%= link_to link[:name], link[:path], class: 'nav-link' %>
            </div>
          <% end %>
          <div class="nav-item">
            <%= link_to yearly_goals_books_path, class: 'nav-link' do %>
              <i class="fa-solid fa-bullseye"></i> Yearly Goals
            <% end %>
          </div>
          <div class="nav-item">
            <%= link_to generator_books_path, class: 'nav-link' do %>
              <i class="fa-solid fa-wand-magic-sparkles"></i> Generator
            <% end %>
          </div>
        </ul>
      </div>
    </div>
  </nav>
</div>
