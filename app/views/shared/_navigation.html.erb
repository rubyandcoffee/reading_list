              <% end %>
              <%= link_to books_unread_path, class: 'dropdown-item' do %>
                <span class="badge text-bg-warning"><%= Book.in_state(:unread).count %></span>
                Unread
              <% end %>
              <%= link_to books_read_path, class: 'dropdown-item' do %>
                <span class="badge text-bg-success"><%= Book.in_state(:read).count %></span>
                Read
              <% end %>
              <%= link_to books_dnf_path, class: 'dropdown-item' do %>
                <span class="badge text-bg-danger"><%= Book.in_state(:dnf).count %></span>
