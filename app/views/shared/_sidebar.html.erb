
<div id="authors">
  <h3>Authors</h3>
  <% Author.all.each do |author| %>
    <p>
      <%= link_to author.full_name, author %>
      <a href="#" data-bs-toggle="modal" data-bs-target="#authorModal<%= author.id %>"><i class="fa-regular fa-pen-to-square"></i></a>
      <%= link_to author_path(author), data: { turbo_method: :delete, turbo_confirm: "Are you sure you wish to delete #{author.full_name}?" } do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </p>
    <%= render 'books/modals/authors/author_modal', author: author, id: "authorModal#{author.id}" %>
  <% end %>
</div>

<div id="genres">
  <h3>Genres</h3>
  <% Genre.all.each do |genre| %>
    <p>
      <%= link_to genre.name, genre %>
      <a href="#" data-bs-toggle="modal" data-bs-target="#genreModal<%= genre.id %>"><i class="fa-regular fa-pen-to-square"></i></a>
      <%= link_to genre_path(genre), data: { remote: true, turbo_method: :delete, turbo_confirm: "Are you sure you wish to delete #{genre.name}?" } do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </p>
    <%= render 'books/modals/genres/genre_modal', genre: genre, id: "genreModal#{genre.id}" %>
  <% end %>
</div>