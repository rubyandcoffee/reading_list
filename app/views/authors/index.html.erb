<div class="row">
  <div class="col-md-3 left-sidebar">
    <%= render partial: 'shared/left_sidebar' %>
  </div>
  <div class="col-md-9">
    <div id="authors">
      <h3>Authors</h3>
      <p><%= @authors.count %> results:</p>
      <% @authors.each do |author| %>
        <div class="clearfix">
          <a class="float-start no-decoration" data-bs-toggle="collapse" href="#collapseAuthor<%= author.id %>">
            <%= author.full_name %>
          </a>
          <div class="collapse" id="collapseAuthor<%= author.id %>">
            <%= link_to author_path(author), class: 'float-end', data: { remote: true, turbo_method: :delete, turbo_confirm: "Are you sure you wish to delete #{author.full_name}?" } do %>
              <i class="fa-solid fa-trash"></i>
              <a href="#" class="float-end no-decoration" data-bs-toggle="modal" data-bs-target="#authorModal<%= author.id %>"><i class="fa-regular fa-pen-to-square"></i></a>
            <% end %>
          </div>
        </div>
        <%= render 'books/modals/authors/author_modal', author: author, id: "authorModal#{author.id}" %>
      <% end %>
    </div>
  </div>
</div>