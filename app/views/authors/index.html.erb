<h1>Authors</h1>

<%= link_to "Create author", new_author_path, class: 'btn btn-success' %>

<div class="row">
  <div class="col-md-4">
    <div id="authors">
      <ul>
        <% @authors.each do |author| %>
          <li>
            <%= link_to author.full_name, author %>
            <span class="small-text"><a href="#" data-bs-toggle="modal" data-bs-target="#authorModal<%= author.id %>"><i class="fa-regular fa-pen-to-square"></i></a></span>
          </li>
          <%= render 'books/modals/authors/author_modal', author: author, id: "authorModal#{author.id}" %>
        <% end %>
      </ul>
    </div>
  </div>
</div>