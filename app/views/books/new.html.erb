<h1>New book</h1>
<div class="row">
  <div class="col-md-12">
    <%= form_with(model: @book) do |form| %>
      <% if @book.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= render "form", book: @book, form: form %>
      <div class="form-field">
        <%= form.label 'Status', style: 'display: block;' %>
        <%= form.collection_select :status, @book.allowed_transitions, :to_s, :humanize, include_blank: true, class: 'form-select' %>
        <span class="small-text">
          If you do not select a status, it will automatically be set to '<%= @book.current_state.humanize %>'.
        </span>
      </div>
      <div>
        <%= form.submit 'Add book to shelf', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>

<%= render 'books/modals/authors/author_modal', title: 'New author', content: 'Enter author name', submit_button: 'Create author', id: 'newAuthorModal', genre: @genre, book: @book %>
<%= render 'books/modals/genres/genre_modal', title: 'New genre', content: 'Enter genre name', submit_button: 'Create genre', id: 'newGenreModal', genre: @genre, book: @book %>
