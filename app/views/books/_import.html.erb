<%= form_tag import_books_path, method: :post, multipart: true do %>
  <h3>
    Upload CSV
    <a href="#" class="float-end no-decoration" data-bs-toggle="modal" data-bs-target="#bookCsvModal"><i class="fa-regular fa-question"></i></a>
  </h3>
  <div class="form-field">
    <%= file_field_tag :file, accept: '.csv' %>
  </div>
  <div class="form-field">
    <%= button_tag(type: 'submit', class: 'btn btn-primary') do %>
      <i class="fa-solid fa-upload"></i> Import books
    <% end %>
  </div>
<% end %>
<%= render 'books/modals/books/book_csv_modal', id: "bookCsvModal" %>