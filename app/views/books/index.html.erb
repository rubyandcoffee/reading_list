<div class="row">
  <div class="col-md-4">
    <h3>Bookshelf</h3>
    <%= image_tag 'book1.png', width: '100%' %>
  </div>
  <div class="col-md-8" id="bookshelf">
    <% Genre.all.order(:name).each do |genre| %>
      <h5><%= genre.name %></h5>
      <% if genre.books.any? %>
        <ul>
          <% genre.books.each do |book| %>
            <li><%= link_to book.title, edit_book_path(book) %> by <%= link_to book.author.full_name %> (<%= book.current_state %>)</li>
          <% end %>
        </ul>
      <% else %>
        <p class="small-text">There are no books in this genre! Would you like to <%= link_to 'add one', new_book_path %>?</p>
      <% end %>
    <% end %>
  </div>
</div>