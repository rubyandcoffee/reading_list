<div class="d-inline-block">
  <%= link_to "Edit this book", edit_book_path(@book), class: 'btn btn-primary' %>
</div>
<div class="d-inline-block">
  <%= button_to "Remove this book", @book, method: :delete, class: 'btn btn-danger' %>
</div>

<div class="row">
  <div class="col-md-6">
    <h3><%= @book.title %> by <%= link_to @book.author.full_name, @book.author %></h3>
    <p>
      <strong>Genre:</strong> <%= link_to @book.genre.name, @book.genre %><br>
      <strong>Currently on shelf:</strong> <%= @book.status %>
    </p>
  </div>
</div>