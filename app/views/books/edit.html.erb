<div id="edit-book">
  <h1>Editing book</h1>
  <%= form_with(model: @book) do |form| %>
    <% if @book.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@book.errors.count, 'error') %> prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= render 'form', book: @book, form: form %>

    <div id="rating" class="form-field <% 'hidden' unless @book.status === 'read' %>" style="width: 60px;">
      <%= form.label 'Rating', style: 'display: block' %>
      <%= form.select :rating, (1..5).to_a, { include_blank: true }, { class: 'form-select' } %>
    </div>
    <%= form.submit 'Update book', class: 'btn btn-success' %>
  <% end %>

  <div class="form-field">
    <%= button_to 'Permanently delete', @book, method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>
<%= render 'books/modals/authors/author_modal', author: @book.author, id: 'authorModal' %>
<%= render 'books/modals/genres/genre_modal', genre: Genre.new, id: 'genreModal' %>
<%= render 'books/modals/series/series_modal', series: Series.new, id: "seriesModal" %>
