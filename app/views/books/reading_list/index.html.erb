<div class="row">
  <div class="col-md-8">
    <h1>TBR</h1>
    <h3>You have <%= pluralize(@to_be_read.count, 'book') %> on your TBR list:</h3>
  </div>
  <div class="col-md-4" style="text-align: right">
    <%= link_to 'Add another book', books_reading_list_add_book_path, class: 'btn btn-success' %>
  </div>
</div>
<div class="row">
  <% @to_be_read.each do |book| %>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= book.title %><br> 
          </h5>
          <h6>
            by <%= book.author.full_name %>
          </h6>
          <p class="card-text">
            <i><%= book.genre.name %></i>
          </p>
          <p class="card-text <%= stale?(book) ? 'stale-book' : 'fresh-book' %>">
            Added on <%= book.book_transitions.last.created_at.strftime("%d %B") %>
          </p>
          <span class="small-text"><%= link_to 'Update', edit_book_path(book) %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>